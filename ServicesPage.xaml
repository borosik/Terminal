<Page x:Class="CharityApp.ServicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
        <Label Content="Выберите услуги:" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <ListBox Width="300" Height="150" Background="White" 
                 BorderBrush="#FFD700" FontSize="18" Foreground="Black" 
                 SelectionMode="Multiple">
            <ListBoxItem Content="Ночлег"/>
            <ListBoxItem Content="Питание"/>
            <ListBoxItem Content="Медицинская помощь"/>
        </ListBox>

        <!-- Увеличенная кнопка "Подтвердить выбор услуг" -->
        <Button Content="Подтвердить выбор услуг" FontSize="20" FontWeight="Bold" 
                Background="#FFD700" Foreground="Black" 
                Padding="10,5" Margin="0,30,0,0" 
                BorderThickness="0" Width="280" Height="55"
                HorizontalAlignment="Center"
                Click="ConfirmButton_Click">
            <Button.Effect>
                <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="3"/>
            </Button.Effect>
        </Button>
    </StackPanel>
</Page>










